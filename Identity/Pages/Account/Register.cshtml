@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}





<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <span class="login100-form-title p-b-40" style="margin-left:10px; margin-top: -20px;font-family:'Century Gothic';">
        <a href="/Home/Index">

            <img src="~/home/img/cllogo3.png" />


        </a>
    </span>
    <div style="margin-top:-20px;">
        <div class="text-center p-t-55">
            @if (@TempData["kayitsonuc"] != null)
            {

                <div class="alert alert-danger " role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class="alert alert-heading">Hata</div>
                    @TempData["kayitsonuc"]

                </div>
            }

            <div class="form-group">
                <label class="control-label">KAYIT OL</label>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
              
                <div class="wrap-input100 validate-input m-b-16" data-validate="lütfen adınızı giriniz.">
                    <input required="" placeholder="Ad" asp-for="Input.Name" class="form-control input100" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>

                    <span class="focus-input100"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="wrap-input100 validate-input m-b-16" data-validate="lütfen soyadınızı giriniz.">
                    <input asp-for="Input.Surname" class="form-control input100" required="" placeholder="Soyad" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>

                    <span class="focus-input100"></span>
                </div>
            </div>
        </div>
        <div class="wrap-input100 validate-input m-b-16">

            <input asp-for="Input.Email" class="form-control input100" required="" placeholder="E-mail" ,
                type="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <span class="focus-input100"></span>
        </div>
        <div class="wrap-input100 validate-input m-b-16">
            <span class="btn-show-pass">
                <i class="fa fa fa-eye"></i>
            </span>

            <input asp-for="Input.Password" class="form-control input100" required="" placeholder="Şifre"
                type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-16">
            <span class="btn-show-pass">
                <i class="fa fa fa-eye"></i>
            </span>

            <input asp-for="Input.ConfirmPassword" class="form-control input100" required=""
                placeholder="Şifrenizi doğrulayınız" type="password" />
            <span class="focus-input100"></span>

        </div>

        <div class="container-login100-form-btn">
            <button type="submit" class="login100-form-btn">
                Kayıt Ol
            </button>

        </div>
        <div class="flex-col-c">

            <span class="txt2 p-b-10">
                Zaten bir hesabınız var mı?
            </span>

            <a asp-page="./Login" class="txt3 bo1 hov1" data-target="function1">
                Giriş Yap
            </a>

        </div>
    </div>


</div>

</form>








