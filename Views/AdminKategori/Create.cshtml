@model on_e_commerce.Models.TblKategori;

@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("Create", "AdminKategori", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="card shadow">
        <div class="card-body">
            <div class="form-horizontal">
                <h4 style="margin-left:10px;font-family:'Century Gothic';">Kategori Oluştur</h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Kategori Adı</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.KategoriAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KategoriAdi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Kategori Resmi</label>
                    <div class="col-md-8">
                        <div class="custom-file">
                            <input type="file" required name="gorsel" id="gorsel" accept=".jpg,.png,.jpeg,.gif" class="form-control" />
                            @Html.ValidationMessageFor(model => model.KategoriResim, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="col-auto">
                    <a href="/AdminKategori/Index/"> <inp type="button" class="btn btn-danger"><span class="fe fe-chevron-left fe-12"></span>Geri Dön</a>
                    <button type="submit" class="btn btn-secondary"><span class="fe fe-filter fe-12 mr-2"></span>Kaydet</button>
                </div>
            </div>

        </div>
    </div>
}
<div class="toast alert alert-danger" role="alert" id="mytost" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="mr-auto">Hata</strong>
    </div>
    <div class="toast-body">
        @TempData["kategorisonuc"]
    </div>
</div>