@model on_e_commerce.Models.TblUrun



@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/admin/js/dataTables.bootstrap4.min.js"></script>

@using (Html.BeginForm("Create", "AdminUrun", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card shadow">
        <div class="card-body">
            <div class="form-horizontal">
                <h4 style="margin-left:10px;font-family:'Century Gothic';">Ürün Oluştur</h4>
                <hr />
                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Adı</label>
                    <div class="col-md-8">

                        @Html.EditorFor(model => model.UrunAdi, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                        @Html.ValidationMessageFor(model => model.UrunAdi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Açıklaması</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Acıklama, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                        @Html.ValidationMessageFor(model => model.Acıklama, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Kategorisi</label>
                    <div class="col-md-8">
                        @Html.DropDownList("KategoriId", null, htmlAttributes: new { @class = "form-control select2 select2-container select2-container--default select2-container--below" })
                        @Html.ValidationMessageFor(model => model.KategoriId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Resmi</label>
                    <div class="col-md-8">
                        <div class="custom-file">
                            <input type="file" required name="gorsel" id="gorsel" accept=".jpg,.png,.jpeg,.gif" class="form-control" />
                            @Html.ValidationMessageFor(model => model.UrunResim, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Fiyatı</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Fiyat, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                        @Html.ValidationMessageFor(model => model.Fiyat, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Miktarı</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Miktar, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                        @Html.ValidationMessageFor(model => model.Miktar, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Ürün Ağırlığı</label>
                    <div class="row col-md-10">
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Agırlık, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                            @Html.ValidationMessageFor(model => model.Agırlık, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            <select class="select2 select2-container select2-container--default form-control " name="agirliktürü">
                                <option value="kg">kg</option>
                                <option value="gr">gr</option>
                                <option value="ml">ml</option>
                                <option value="lt">lt</option>
                            </select>
                        </div>
                    </div>
                </div>


            </div>
            <div class="form-group">
                <div class="col-auto">
                    <a href="/AdminUrun/Index/"> <inp type="button" class="btn btn-danger"><span class="fe fe-chevron-left fe-12"></span>Geri Dön</a>
                    <button type="submit" class="btn btn-secondary"><span class="fe fe-filter fe-12 mr-2"></span>Kaydet</button>
                </div>

            </div>
        </div>
    </div>
}










