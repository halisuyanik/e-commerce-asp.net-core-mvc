@using on_e_commerce.Models


@{
    ViewBag.Title = "SepetiOnayla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    var x = document.getElementById("sepetdiv");
    x.style.display = "none";
</script>

@if (Session["sepet"] == null)
{
    <div class="alert alert-danger">
        <strong>Alışveriş sepetiniz boş !</strong>
    </div>
}
else
{
    int totalfiyat = 0;

    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Ürün</th>
                                    <th>Fıyat</th>
                                    <th>Ürün Adedi</th>
                                    <th>Toplam</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (Item item in (List<Item>)Session["sepet"])
                                {

                                    int uruntotalfiyat = Convert.ToInt16(@item.Urun.Fiyat) * Convert.ToInt16(@item.Count);
                                    totalfiyat += uruntotalfiyat;
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@item.Urun.UrunResim" width="80" height="80" alt="">
                                        <h5>@item.Urun.UrunAdi</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @item.Urun.Fiyat TL
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <a href="@Url.Action("UrunEksilt", "Home", new { urunid = item.Urun.UrunId })">
                                                <i class="fa fa-minus"></i>
                                            </a>
                                            @*<input type="text" disabled name="urunsayisi" value="@item.Count">*@
                                            <span class="label other">@item.Count</span>
                                            <a href="@Url.Action("UrunArttır", "Home", new { urunid = item.Urun.UrunId, url="SepetiOnayla" })">
                                                <i class="fa fa-plus ql-color-orange"></i>
                                            </a>
                                        </div>

                                    </td>
                                    @*<td>
                                        <a href="@Url.Action("UrunEksilt", "Home", new { urunid = item.Urun.UrunId })">
                                            <i class="fa fa-minus"></i>
                                        </a>
                                        <input type="text" name="urunsayisi" value="@item.Count">
                                        <a href="@Url.Action("UrunArttır", "Home", new { urunid = item.Urun.UrunId, url="SepetiOnayla" })">
                                            <i class="fa fa-plus"></i>
                                        </a>

                                    </td>*@
                                    <td class="shoping__cart__total">
                                        @uruntotalfiyat TL
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <a href="@Url.Action("UrunuCıkar", "Home", new { urunid = item.UrunId})">
                                            <span class="icon_close">  </span>
                                        </a>
                                        @*<span class="icon_close">  </span>*@
                                    </td>
                                </tr>


                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="#" class="primary-btn cart-btn">ALIŞVERİŞE DEVAM ET</a>
                        <a href="#" class="primary-btn cart-btn cart-btn-right">
                            <span class="icon_loading"></span>
                            Sepeti Güncelle
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__continue">
                        <div class="shoping__discount">
                            <h5>İNDİRİM KUPONU</h5>
                            <form action="#">
                                <input type="text" placeholder="İndirim kuponu kodunuzu giriniz">
                                <button type="submit" class="site-btn">KUPONU UYGULA</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Sepet Toplam</h5>
                        <ul>
                            <li>Toplam <span>@totalfiyat TL</span></li>
                        </ul>
                        @*@if (Session["uyeid"] == null)
                        {
                            <a href="#" data-toggle="modal" data-target="#membership-modal" class="primary-btn">SEPETİ ONAYLA</a>
                        }
                        else
                        {*@
                            <a href="/Payment/Payment/" class="primary-btn">SEPETİ ONAYLA</a>
                        @*}*@

                    </div>
                </div>
            </div>
        </div>
    </section>

}