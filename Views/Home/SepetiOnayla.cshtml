@using on_e_commerce.Models

@{
    ViewBag.Title = "Sepeti Onayla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{


        <section class="shoping-cart spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shoping__cart__table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="shoping__product">Ürün</th>
                                        <th>Fıyat</th>
                                        <th>Ürün Adedi</th>
                                        <th>Toplam</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody class="show-cart table">
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="shoping__cart__btns">
                                        <a href="#" class="primary-btn cart-btn">ALIŞVERİŞE DEVAM ET</a>
                                        <a href="#" class="primary-btn cart-btn cart-btn-right">
                                            <span class="icon_loading"></span>
                                            Sepeti Güncelle
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="shoping__continue">
                                        <div class="shoping__discount">
                                            <h5>İNDİRİM KUPONU</h5>
                                            <form action="#">
                                                <input type="text" placeholder="İndirim kuponu kodunuzu giriniz">
                                                <button type="submit" class="site-btn ">KUPONU UYGULA</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="shoping__checkout">
                                        <h5>Sepet Toplam</h5>
                                        <ul>
                                            <li>Toplam: <span class="total-cart"></span>₺</li>
                                        </ul>
                                       <button id="sepeti-tamamla" type="submit" class="site-btn btn-block">SEPETİ ONAYLA</button>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>

            </div>
        </section>
 
        }

@section Scripts
    {

    }


